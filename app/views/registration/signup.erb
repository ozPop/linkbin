  <div class="main wrap">

    <% if flash.has?(:message) %>
      <div class="alert alert-warning alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= flash[:message] %></div>
    <% end %>

    <h2>Sign Up</h2>
    <form action="/signup" method="POST">
      <h3>
        <input type="text" name="username" placeholder="Username:">  
      </h3>
      <h3>
        <input type="text" name="email" placeholder="Your Email:">  
      </h3>
      <h3>
        <input type="password" name="password" placeholder="Password:">  
      </h3>
      <button class="btn btn-default" type="submit" value="Sign Up">Sign Up</button>
    </form>

  </div>